{
    "compilerOptions": {
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": false,
        "target": "es2017",
        "declaration": true,
        "outDir": "dist/",
        "skipLibCheck": true,
        "baseUrl": "src",
        "lib": [
            "esnext",
            "es2017",
            "es2015",
            "es6"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}